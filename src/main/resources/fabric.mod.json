{
  "schemaVersion": 1,
  "id": "marathon",
  "version": "${version}",
  "name": "Marathon",
  "description": "Enhances Minecraft's vanilla sprinting and sneaking by allowing you to toggle them persistently with a single key press. No more constant re-toggling or awkward double-taps.",
  "authors": [
    "DevPieter"
  ],
  "contact": {
    "homepage": "https://pietr.space/",
    "sources": "https://github.com/DevPieter/Marathon",
    "issues": "https://github.com/DevPieter/Marathon/issues"
  },
  "license": "MIT",
  "icon": "assets/marathon/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "nl.devpieter.marathon.Marathon"
    ]
  },
  "mixins": [
    "marathon.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": ">=${minecraft_version} <=${max_minecraft_version}",
    "utilize": ">=1.1.1 <1.2.0"
  }
}
